<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_200"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/mainImage"
        android:src="@drawable/khtn"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/detail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/i" />

        <ImageButton
            android:id="@+id/contact"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ca" />

        <ImageButton
            android:id="@+id/comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/chat" />

        <ImageButton
            android:id="@+id/direct"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/dire" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18pt"
                android:id="@+id/mainName" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15pt"
                android:id="@+id/textDetail"
                android:text="@string/feature_in4" />

            <TextView
                android:id="@+id/in4Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/detail"
                android:textSize="10pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textContact"
                android:text="@string/feature_contact"
                android:textSize="15pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/in4Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textSize="10pt"
                app:drawableLeftCompat="@drawable/ic_call" />
            <TextView
                android:id="@+id/in4Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textSize="10pt"
                app:drawableLeftCompat="@drawable/ic_email" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textComent"
                android:text="@string/feature_comment"
                android:textSize="15pt"
                android:textStyle="bold" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Tên"/>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:background="@color/white"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Nội dung"/>

                <EditText
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:background="@color/white"/>
            </GridLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Comment" />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>